<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleWhite"
    android:padding="15dp">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/paleWhite">

        <LinearLayout
            android:id="@+id/applications_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_app_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application ID:"
                android:textSize="22sp"
                android:textColor="@color/indigo"
                android:fontFamily="@font/garet"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/detail_app_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Submitted:"
                android:textSize="22sp"
                android:textColor="@color/indigo"
                android:fontFamily="@font/garet"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/detail_app_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Type:"
                android:textSize="22sp"
                android:textColor="@color/indigo"
                android:fontFamily="@font/garet"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/detail_app_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="22sp"
                android:textColor="@color/indigo"
                android:fontFamily="@font/garet"
                android:paddingBottom="10dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>