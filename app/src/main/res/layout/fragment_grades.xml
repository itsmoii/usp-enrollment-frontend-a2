<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <!-- Navigation Tab Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="8dp">

        <Button
            android:id="@+id/gradesTabButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="GRADES"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginRight="4dp" />

        <Button
            android:id="@+id/reportsTabButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="REPORTS"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp" />

    </LinearLayout>

    <!-- Grades Section -->
    <LinearLayout
        android:id="@+id/gradesSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Overall GPA Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Overall GPA:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/gpaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:padding="8dp"
                android:background="@color/teal_50"
                android:minWidth="80dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Grades Table -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <TableLayout
                    android:id="@+id/gradesTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@android:color/white"
                    android:elevation="2dp"
                    android:stretchColumns="*" />

            </HorizontalScrollView>

        </ScrollView>

        <Button
            android:id="@+id/printButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Grades"
            android:layout_gravity="end|top"
            android:layout_margin="16dp" />

    </LinearLayout>

    <!-- Reports Section -->
    <LinearLayout
        android:id="@+id/reportsSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Reports Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Semester Reports"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View and print detailed semester reports with grades and GPA calculations"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:paddingBottom="8dp" />

        </LinearLayout>

        <!-- Semester Reports List -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/semesterGpaContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>
